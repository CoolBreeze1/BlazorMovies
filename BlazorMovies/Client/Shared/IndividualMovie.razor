
    <div class="card shadow">
        <div class="card-body">
            <p>Title: @((MarkupString)Movie.Title)</p>
            <p>Release Date: <b>@Movie.ReleaseDate.ToString("dd MMM yyy")</b></p>
            @if (DisplayDelete)
            {
                <div>
                    <button class="btn btn-danger shadow" @onclick="@(x => DeleteMovie.InvokeAsync(Movie))">Delete</button>
                </div>
            }
        </div>
    </div>


@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool DisplayDelete { get; set; } = false;
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; } 
}
